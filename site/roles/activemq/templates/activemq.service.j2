[Unit]
Description=Apache ActiveMQ
After=network-online.target

[Service]
Type=forking
WorkingDirectory={{ amq_run_dir }}/bin
ExecStart={{ amq_run_dir }}/bin/activemq start
ExecStop={{ amq_run_dir }}/bin/activemq stop
Restart=on-abort
User={{ amq_user }}
Group={{ amq_group }}

[Install]
WantedBy=multi-user.target